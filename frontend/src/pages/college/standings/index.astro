---
import ConferenceColumn from "@components/ConferenceColumn.astro";
import { CONFERENCES } from "@content/constants";
import Layout from "@layouts/BaseLayout.astro";
---

<Layout content={{ title: "College League Standings" }}>
  <section class="content">
    <h1>College League Standings</h1>
  </section>
  <div class="columns is-multiline is-centered">
    {
      Object.entries(CONFERENCES).map(([key, value]) => {
        const imgFile = (value.img || value.file)
          .replace(/\W/, "")
          .toLowerCase();
        return (
          <ConferenceColumn image={imgFile} link={key} title={value.title} />
        );
      })
    }
  </div>
</Layout>
