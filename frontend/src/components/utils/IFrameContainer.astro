---
import type { LEAGUE } from "@lib/constants";
import Layout from "@layouts/BaseLayout.astro";

export type Props = {
  title: string;
  league: LEAGUE | string;
  file: string;
};

const { title, league, file } = Astro.props as Props;
---

<Layout content={{ title: title }} fullWidth>
  <div class="hero is-fullheight">
    <iframe
      id="websitePage"
      title={title}
      src={`${import.meta.env.BASE_URL}files/${league}/Website/${file}.html`}
      style="height: 100vh; width: 100%"></iframe>
  </div>
</Layout>
